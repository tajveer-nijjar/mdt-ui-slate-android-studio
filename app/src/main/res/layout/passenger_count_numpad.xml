<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/passenger_count_numpad_background"
    android:orientation="vertical">

	<TextView
        android:id="@+id/passengerNumpadHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="0dp"
        android:text="Add passengers"
        android:textSize="@dimen/textsize_medium" />

	<TextView
        android:id="@+id/numberCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textSize="56dp" />

	<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

	<TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/padding_medium">

		<TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

			<Button
                android:id="@+id/number1Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium" />

			<Button
                android:id="@+id/number2Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium" />

			<Button
                android:id="@+id/number3Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium" />


		</TableRow>

		<TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

			<Button
                android:id="@+id/number4Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium" />

			<Button
                android:id="@+id/number5Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium" />

			<Button
                android:id="@+id/number6Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium" />


		</TableRow>

		<TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

			<Button
                android:id="@+id/number7Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium" />

			<Button
                android:id="@+id/number8Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium" />

			<Button
                android:id="@+id/number9Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium" />
		</TableRow>

		<TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

			<ImageButton
                android:id="@+id/okImageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:backgroundTint="@android:color/holo_green_dark"
                android:contentDescription="ok image button"
                android:src="@mipmap/icon_done"
                android:tint="@color/white" />

			<Button
                android:id="@+id/number0Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium" />

			<ImageButton
                android:id="@+id/backspaceImageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_very_small"
                android:background="@drawable/numpad_key_background"
                android:backgroundTint="@android:color/holo_red_dark"
                android:contentDescription="backspace image button"
                android:src="@mipmap/icon_backspace"
                android:tint="@color/white" />

		</TableRow>

	</TableLayout>

</LinearLayout>