<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/fareCounterButton"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:background="@drawable/fare_counter_background"
        android:backgroundTint="@android:color/holo_purple"
        android:clickable="true"
        android:contentDescription=""
        android:focusable="true"
        android:alpha=".3"
        android:foreground="?attr/selectableItemBackgroundBorderless" />

    <TextView
        android:id="@+id/fareCounterNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-16dp"
        android:clickable="false"
        android:focusable="false"
        android:text="1234"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_medium" />

    <TextView
        android:id="@+id/passengerCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_medium"
        android:clickable="false"
        android:focusable="false"
        android:text="222"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/minusFareCountButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:contentDescription=""
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@mipmap/icon_subtract_fare" />

</FrameLayout>